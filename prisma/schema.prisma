generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Aluno {
  matricula    String     @id @default(uuid())
  nome         String
  grupo        Grupo      @relation(fields: [grupoId], references: [idGrupo])
  grupoId      String
  avaliacao    Avaliacao[]
  lider        Boolean?   

  @@map("Aluno")
}

model Grupo {
  integrantes Aluno[]
  idGrupo     String  @id @default(uuid())
  projeto     Projeto @relation(fields: [projetoId], references: [idProjeto])
  projetoId   String  @unique

  @@map("Grupo")
}

model Projeto {
  idProjeto String    @id @default(uuid()) // NÃºmero do stand
  data      DateTime  @default(now())
  nome      String
  grupo     Grupo?

  @@map("Projeto")
}

model Avaliacao {
  idAvaliacao  String     @id @default(uuid())
  professor    Professor? @relation(fields: [professorId], references: [idProfessor])
  professorId  String?
  aluno        Aluno?     @relation(fields: [alunoId], references: [matricula])
  alunoId      String?
  notaFinal    Float
  maturidade   Float
  inovacao     Float
  apresentacao Float
  atratividade Float
  
  @@map("Avaliacao")
}

model Professor {
  idProfessor String      @id @default(uuid())
  avaliacao   Avaliacao[]
  nome        String

  @@map("Professor")
}